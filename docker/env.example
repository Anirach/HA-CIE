# HA-CIE Environment Configuration
# Copy this file to .env and update values as needed

# ===========================================
# Application Settings
# ===========================================
APP_DEBUG=false
SECRET_KEY=your-super-secret-key-change-this-in-production

# ===========================================
# Storage Configuration
# ===========================================
# Options: 'json' (default, file-based) or 'postgres' (database)
STORAGE_MODE=json
DATA_DIR=./data

# ===========================================
# Database Configuration (if STORAGE_MODE=postgres)
# ===========================================
DATABASE_URL=postgresql://hacie:hacie_password@localhost:5432/hacie_db
POSTGRES_USER=hacie
POSTGRES_PASSWORD=hacie_password
POSTGRES_DB=hacie_db

# ===========================================
# Neo4j Graph Database (optional)
# ===========================================
NEO4J_URI=bolt://localhost:7687
NEO4J_USER=neo4j
NEO4J_PASSWORD=neo4j_password
NEO4J_HTTP_PORT=7474
NEO4J_BOLT_PORT=7687

# ===========================================
# JWT Configuration
# ===========================================
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=1440

# ===========================================
# Docker Ports
# ===========================================
FRONTEND_PORT=3500
BACKEND_PORT=8000

